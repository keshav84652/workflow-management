# New UI Development Environment Configuration
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=True

# Use different port for parallel development
FLASK_RUN_PORT=5003

# Database - you can use same DB or separate one
# Same DB: DATABASE_URL=sqlite:///instance/workflow.db
# Separate DB: DATABASE_URL=sqlite:///instance/workflow_new_ui.db
DATABASE_URL=sqlite:///instance/workflow_new_ui.db

# Session configuration for new UI
SECRET_KEY=your-new-ui-secret-key-here
SESSION_COOKIE_NAME=cpa_workflow_new_ui_session

# AI Services (copy from main .env if needed)
# AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=
# AZURE_DOCUMENT_INTELLIGENCE_KEY=
# GEMINI_API_KEY=

# Redis (if using different instance)
# REDIS_URL=redis://localhost:6380