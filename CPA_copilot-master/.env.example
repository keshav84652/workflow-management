# Azure Document Intelligence Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://cpa-flow.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_azure_key_here

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# Application Configuration
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# File Upload Configuration
UPLOAD_FOLDER=temp/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,tiff
MAX_BATCH_SIZE=20  # Maximum files in batch upload

# Processing Configuration
ENABLE_PII_MASKING=True
PII_HANDLING_MODE=mask  # Options: ignore, mask, remove
PROCESSING_TIMEOUT=300  # 5 minutes in seconds

# Workpaper Generation
WORKPAPER_OUTPUT_FOLDER=temp/workpapers
BOOKMARK_LEVELS=3
DEFAULT_PAGE_SIZE=letter  # Options: letter, a4

# API Rate Limiting
AZURE_RATE_LIMIT=10  # Requests per second
GEMINI_RATE_LIMIT=60  # Requests per minute

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds
CLEANUP_INTERVAL=1800  # 30 minutes in seconds

# Feature Flags
ENABLE_GEMINI_ANALYSIS=True
ENABLE_COMPARISON_VIEW=True
ENABLE_EXCEL_EXPORT=True
ENABLE_BATCH_PROCESSING=True
