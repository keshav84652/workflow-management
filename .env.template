# CPA Workflow Management - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-region.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_azure_key_here

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,tiff
MAX_BATCH_SIZE=20

# Processing Settings
ENABLE_PII_MASKING=true
PII_HANDLING_MODE=mask
PROCESSING_TIMEOUT=300

# Workpaper Generation
WORKPAPER_OUTPUT_FOLDER=uploads/workpapers
BOOKMARK_LEVELS=3
DEFAULT_PAGE_SIZE=letter

# API Rate Limiting
AZURE_RATE_LIMIT=10
GEMINI_RATE_LIMIT=60

# Session Management
SESSION_TIMEOUT=3600
CLEANUP_INTERVAL=1800

# Feature Flags
ENABLE_GEMINI_ANALYSIS=true
ENABLE_COMPARISON_VIEW=true
ENABLE_EXCEL_EXPORT=true
ENABLE_BATCH_PROCESSING=true